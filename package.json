{
  "name": "twitch-channel-points-redemption",
  "version": "1.0.0",
  "description": "Simple WebSocket client to subscribe to Twitch channel points redemption events",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "validate": "node validateToken.js",
    "oauth": "node oauth-server.js",
    "gui": "electron .",
    "gui:dev": "cross-env NODE_ENV=development electron .",
    "postinstall": "node scripts/init-config.js",
    "prebuild": "node scripts/prebuild.js",
    "build": "npm run prebuild && electron-builder --win --mac",
    "build:win": "npm run prebuild && electron-builder --win",
    "build:mac": "npm run prebuild && electron-builder --mac",
    "build:dir": "npm run prebuild && electron-builder --win --mac --dir",
    "dist": "npm run prebuild && electron-builder"
  },
  "build": {
    "appId": "com.twitch.channelpoints.monitor",
    "productName": "Twitch Channel Points Monitor",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "gui/**/*",
      "client/**/*",
      "config/**/*",
      "lib/**/*",
      "public/**/*",
      "index.js",
      "oauth-server.js",
      "validateToken.js",
      "package.json",
      "!node_modules/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "twitch",
    "eventsub",
    "websocket",
    "channel-points",
    "gui",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "i18next": "^25.6.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}
